{
  "manifest_version": 3,
  "name": "PopcornLens",
  "version": "0.0.2",
  "description": "Injects external movie ratings and information into movie websites.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.cinecalidad.rs/*",
        "https://mega-mkv.com/*"
      ],
      "js": [
        "utils/config.js",
        "utils/parser.js",
        "utils/cache.js",
        "utils/tmdb.js",
        "handlers/cinecalidad.js",
        "handlers/megamkv.js",
        "content.js"
      ],
      "css": ["styles.css"]

    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PopcornLens"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.themoviedb.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
